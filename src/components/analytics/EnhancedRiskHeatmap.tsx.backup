/**
 * Enhanced Risk Heatmap Component
 *
 * Features:
 * - Dual inherent/residual display with checkboxes
 * - Colored numbers (red for inherent, blue for residual)
 * - Enhanced popover with risk lists
 * - Arrow visualization on hover
 * - Click to edit risk
 */

import { useState, useEffect } from 'react';
import {
  getEnhancedHeatmapData,
  getRiskLevelColor,
  type EnhancedHeatmapCell,
  type RiskWithPosition,
} from '@/lib/analytics';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Alert, AlertDescription } from '@/components/ui/alert';
import { Badge } from '@/components/ui/badge';
import { Checkbox } from '@/components/ui/checkbox';
import { Label } from '@/components/ui/label';
import {
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
} from '@/components/ui/dialog';

interface EnhancedRiskHeatmapProps {
  matrixSize?: 5 | 6;
  onEditRisk?: (riskId: string) => void;
}

export default function EnhancedRiskHeatmap({
  matrixSize = 5,
  onEditRisk,
}: EnhancedRiskHeatmapProps) {
  const [heatmapData, setHeatmapData] = useState<EnhancedHeatmapCell[][]>([]);
  const [selectedCell, setSelectedCell] = useState<EnhancedHeatmapCell | null>(null);
  const [showInherent, setShowInherent] = useState(true);
  const [showResidual, setShowResidual] = useState(true);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [hoveredRisk, setHoveredRisk] = useState<RiskWithPosition | null>(null);

  useEffect(() => {
    loadHeatmapData();
  }, [matrixSize]);

  async function loadHeatmapData() {
    setLoading(true);
    setError(null);

    try {
      const { data, error: heatmapError } = await getEnhancedHeatmapData(matrixSize);

      if (heatmapError) {
        throw new Error(heatmapError.message);
      }

      setHeatmapData(data || []);
    } catch (err) {
      console.error('Heatmap load error:', err);
      setError(err instanceof Error ? err.message : 'Failed to load heatmap');
    } finally {
      setLoading(false);
    }
  }

  // Get cell opacity based on count
  const getOpacity = (count: number): number => {
    if (count === 0) return 0.1;
    if (count === 1) return 0.3;
    if (count === 2) return 0.5;
    if (count <= 4) return 0.7;
    return 1.0;
  };

  // Handle risk click
  const handleRiskClick = (riskId: string) => {
    if (onEditRisk) {
      onEditRisk(riskId);
      setSelectedCell(null); // Close popover
    }
  };

  // Loading state
  if (loading) {
    return (
      <div className="flex items-center justify-center h-96">
        <div className="text-lg text-gray-600">Loading heatmap...</div>
      </div>
    );
  }

  // Error state
  if (error) {
    return (
      <Alert variant="destructive">
        <AlertDescription>{error}</AlertDescription>
      </Alert>
    );
  }

  return (
    <div className="space-y-6">
      {/* Controls */}
      <Card>
        <CardContent className="pt-6">
          <div className="flex items-center gap-6">
            <div className="flex items-center gap-2">
              <Checkbox
                id="show-inherent"
                checked={showInherent}
                onCheckedChange={(checked) => setShowInherent(!!checked)}
              />
              <Label htmlFor="show-inherent" className="cursor-pointer">
                Show Inherent
              </Label>
            </div>

            <div className="flex items-center gap-2">
              <Checkbox
                id="show-residual"
                checked={showResidual}
                onCheckedChange={(checked) => setShowResidual(!!checked)}
              />
              <Label htmlFor="show-residual" className="cursor-pointer">
                Show Residual
              </Label>
            </div>

            <div className="ml-auto text-sm text-gray-600">
              Displaying {heatmapData.flat().reduce((sum, cell) => sum + (showInherent ? cell.inherent_count : 0) + (showResidual && !showInherent ? cell.residual_count : 0), 0)} risk(s)
            </div>
          </div>
        </CardContent>
      </Card>

      {/* Main Layout: Heatmap + Side Panel */}
      <div className="flex gap-6">

      {/* Heatmap Grid */}
      <Card>
        <CardHeader>
          <div className="flex items-center justify-between">
            <CardTitle>Risk Heatmap ({matrixSize}√ó{matrixSize})</CardTitle>
            <div className="flex items-center gap-4 text-sm">
              <div className="flex items-center gap-2">
                <div className="w-3 h-3 rounded bg-green-500" />
                <span>Low</span>
              </div>
              <div className="flex items-center gap-2">
                <div className="w-3 h-3 rounded bg-yellow-400" />
                <span>Medium</span>
              </div>
              <div className="flex items-center gap-2">
                <div className="w-3 h-3 rounded bg-orange-500" />
                <span>High</span>
              </div>
              <div className="flex items-center gap-2">
                <div className="w-3 h-3 rounded bg-red-500" />
                <span>Extreme</span>
              </div>
            </div>
          </div>
        </CardHeader>
        <CardContent>
          <div className="relative flex gap-6">
            {/* Y-axis label */}
            <div className="flex flex-col items-center justify-center">
              <div
                className="text-sm font-semibold text-gray-700 vertical-text"
                style={{
                  writingMode: 'vertical-rl',
                  transform: 'rotate(180deg)',
                }}
              >
                IMPACT ‚Üí
              </div>
            </div>

            {/* Main grid container */}
            <div className="flex-1">
              <div className="space-y-1">
                {heatmapData.map((row, rowIndex) => (
                  <div key={rowIndex} className="flex gap-1">
                    {row.map((cell, colIndex) => {
                      const cellColor = cell.color;
                      const isSelected =
                        selectedCell?.likelihood === cell.likelihood &&
                        selectedCell?.impact === cell.impact;

                      // Determine what to display based on checkboxes
                      let displayContent = '';
                      if (showInherent && showResidual) {
                        displayContent = `${cell.inherent_count} / ${cell.residual_count}`;
                      } else if (showInherent) {
                        displayContent = `${cell.inherent_count}`;
                      } else if (showResidual) {
                        displayContent = `${cell.residual_count}`;
                      }

                      return (
                        <button
                          key={`${cell.likelihood}-${cell.impact}`}
                          onClick={() => setSelectedCell(cell)}
                          className={`
                            relative w-20 h-20 rounded-lg border-2 transition-all
                            hover:scale-105 hover:shadow-lg hover:z-10
                            ${
                              isSelected
                                ? 'border-blue-600 shadow-lg scale-105 z-10'
                                : 'border-gray-300'
                            }
                          `}
                          style={{
                            backgroundColor: cellColor,
                            opacity: getOpacity(Math.max(cell.inherent_count, cell.residual_count)),
                          }}
                        >
                          {/* Cell content */}
                          <div className="absolute inset-0 flex flex-col items-center justify-center text-white">
                            {showInherent && showResidual ? (
                              <div className="text-lg font-bold">
                                <span className="text-red-200">{cell.inherent_count}</span>
                                {' / '}
                                <span className="text-blue-200">{cell.residual_count}</span>
                              </div>
                            ) : (
                              <div className="text-2xl font-bold">
                                {displayContent}
                              </div>
                            )}
                            <div className="text-xs opacity-90 mt-1">
                              {cell.likelihood}√ó{cell.impact}
                            </div>
                          </div>

                          {/* Hover indicator for non-empty cells */}
                          {(cell.inherent_count > 0 || cell.residual_count > 0) && (
                            <div className="absolute top-1 right-1">
                              <div className="w-2 h-2 rounded-full bg-white opacity-50" />
                            </div>
                          )}
                        </button>
                      );
                    })}
                  </div>
                ))}
              </div>

              {/* X-axis label */}
              <div className="text-center mt-3">
                <div className="text-sm font-semibold text-gray-700">
                  ‚Üê LIKELIHOOD ‚Üí
                </div>
              </div>

              {/* SVG Overlay for Arrows (shown when hovering over risk in popover) */}
              {hoveredRisk && (
                <svg
                  className="absolute top-0 left-0 pointer-events-none"
                  style={{
                    width: matrixSize * 84, // 80px cell + 4px gap
                    height: matrixSize * 84,
                  }}
                >
                  <defs>
                    <marker
                      id="arrowhead-green"
                      markerWidth="10"
                      markerHeight="10"
                      refX="8"
                      refY="3"
                      orient="auto"
                    >
                      <polygon points="0 0, 10 3, 0 6" fill="#22c55e" />
                    </marker>
                    <marker
                      id="arrowhead-gray"
                      markerWidth="10"
                      markerHeight="10"
                      refX="8"
                      refY="3"
                      orient="auto"
                    >
                      <polygon points="0 0, 10 3, 0 6" fill="#9ca3af" />
                    </marker>
                  </defs>

                  {/* Draw arrow from inherent to residual position */}
                  {(() => {
                    const startX = (hoveredRisk.inherent_l - 1) * 84 + 42;
                    const startY = (matrixSize - hoveredRisk.inherent_i) * 84 + 42;
                    const endX = (hoveredRisk.residual_l - 1) * 84 + 42;
                    const endY = (matrixSize - hoveredRisk.residual_i) * 84 + 42;

                    // Check if there's movement
                    const hasMovement =
                      hoveredRisk.inherent_l !== hoveredRisk.residual_l ||
                      hoveredRisk.inherent_i !== hoveredRisk.residual_i;

                    if (!hasMovement) {
                      // No movement - show circular indicator
                      return (
                        <circle
                          cx={startX}
                          cy={startY}
                          r="35"
                          fill="none"
                          stroke="#9ca3af"
                          strokeWidth="2"
                          strokeDasharray="5,5"
                          opacity="0.7"
                        />
                      );
                    }

                    // Calculate curved path
                    const controlX = (startX + endX) / 2;
                    const controlY = Math.min(startY, endY) - 50;
                    const pathData = `M ${startX} ${startY} Q ${controlX} ${controlY} ${endX} ${endY}`;

                    const inherentScore = hoveredRisk.inherent_l * hoveredRisk.inherent_i;
                    const residualScore = hoveredRisk.residual_l * hoveredRisk.residual_i;
                    const improved = residualScore < inherentScore;

                    return (
                      <path
                        d={pathData}
                        stroke={improved ? '#22c55e' : '#9ca3af'}
                        strokeWidth="3"
                        fill="none"
                        markerEnd={`url(#arrowhead-${improved ? 'green' : 'gray'})`}
                        opacity="0.8"
                      />
                    );
                  })()}
                </svg>
              )}
            </div>
          </div>

          {/* Instructions */}
          <div className="mt-4 text-sm text-gray-600 text-center">
            Click on any cell to view risks in that category
          </div>
        </CardContent>
      </Card>

      {/* Selected Cell Popover/Dialog */}
      <Dialog open={!!selectedCell} onOpenChange={() => setSelectedCell(null)}>
        <DialogContent className="max-w-3xl max-h-[80vh] overflow-y-auto">
          {selectedCell && (
            <>
              <DialogHeader>
                <DialogTitle className="flex items-center gap-3">
                  <Badge
                    style={{
                      backgroundColor: selectedCell.color,
                      color: 'white',
                    }}
                    className="text-lg px-3 py-1"
                  >
                    {selectedCell.level}
                  </Badge>
                  <span>
                    Risks in cell (L:{selectedCell.likelihood} √ó I:{selectedCell.impact})
                  </span>
                </DialogTitle>
              </DialogHeader>

              <div className="space-y-6 mt-4">
                {/* Inherent Risks Section */}
                {showInherent && selectedCell.inherent_count > 0 && (
                  <div>
                    <h3 className="text-lg font-semibold mb-3 flex items-center gap-2">
                      üìç Inherent Risks ({selectedCell.inherent_count})
                    </h3>
                    <div className="space-y-2">
                      {selectedCell.inherent_risks.map((risk) => {
                        const inherentScore = risk.inherent_l * risk.inherent_i;
                        const residualScore = risk.residual_l * risk.residual_i;
                        const improved = residualScore < inherentScore;
                        const unchanged = residualScore === inherentScore;

                        return (
                          <div
                            key={risk.id}
                            className="bg-gray-50 rounded-lg p-3 hover:bg-gray-100 transition-colors cursor-pointer border border-gray-200"
                            onMouseEnter={() => setHoveredRisk(risk)}
                            onMouseLeave={() => setHoveredRisk(null)}
                            onClick={() => handleRiskClick(risk.id)}
                          >
                            <div className="flex items-start justify-between">
                              <div className="flex-1">
                                <div className="font-medium text-blue-900">
                                  {risk.risk_code}: {risk.risk_title}
                                </div>
                                <div className="text-sm text-gray-600 mt-1">
                                  ‚Üí Residual: L:{risk.residual_l}, I:{risk.residual_i}
                                  {improved && (
                                    <span className="ml-2 text-green-600 font-medium">
                                      [‚ÜòÔ∏è Improved]
                                    </span>
                                  )}
                                  {unchanged && (
                                    <span className="ml-2 text-gray-500">
                                      [‚ö™ No change]
                                    </span>
                                  )}
                                </div>
                                <div className="text-xs text-gray-500 mt-1">
                                  Status: {risk.status} | Owner: {risk.owner}
                                </div>
                              </div>
                            </div>
                          </div>
                        );
                      })}
                    </div>
                  </div>
                )}

                {/* Residual Risks Section */}
                {showResidual && selectedCell.residual_count > 0 && (
                  <div>
                    <h3 className="text-lg font-semibold mb-3 flex items-center gap-2">
                      üéØ Residual Risks Landing Here ({selectedCell.residual_count})
                    </h3>
                    <div className="space-y-2">
                      {selectedCell.residual_risks.map((risk) => {
                        const inherentScore = risk.inherent_l * risk.inherent_i;
                        const residualScore = risk.residual_l * risk.residual_i;
                        const improved = residualScore < inherentScore;
                        const unchanged = residualScore === inherentScore;

                        return (
                          <div
                            key={risk.id}
                            className="bg-blue-50 rounded-lg p-3 hover:bg-blue-100 transition-colors cursor-pointer border border-blue-200"
                            onMouseEnter={() => setHoveredRisk(risk)}
                            onMouseLeave={() => setHoveredRisk(null)}
                            onClick={() => handleRiskClick(risk.id)}
                          >
                            <div className="flex items-start justify-between">
                              <div className="flex-1">
                                <div className="font-medium text-blue-900">
                                  {risk.risk_code}: {risk.risk_title}
                                </div>
                                <div className="text-sm text-gray-600 mt-1">
                                  From Inherent: L:{risk.inherent_l}, I:{risk.inherent_i}
                                  {improved && (
                                    <span className="ml-2 text-green-600 font-medium">
                                      [‚ÜóÔ∏è Improved]
                                    </span>
                                  )}
                                  {unchanged && (
                                    <span className="ml-2 text-gray-500">
                                      [‚ö™ No change]
                                    </span>
                                  )}
                                </div>
                                <div className="text-xs text-gray-500 mt-1">
                                  Status: {risk.status} | Owner: {risk.owner}
                                </div>
                              </div>
                            </div>
                          </div>
                        );
                      })}
                    </div>
                  </div>
                )}

                {/* Empty state */}
                {((showInherent && selectedCell.inherent_count === 0) ||
                  (showResidual && selectedCell.residual_count === 0)) &&
                  !(showInherent && selectedCell.inherent_count > 0) &&
                  !(showResidual && selectedCell.residual_count > 0) && (
                    <p className="text-gray-600 text-center py-8">
                      No risks in this category (L{selectedCell.likelihood} √ó I
                      {selectedCell.impact})
                    </p>
                  )}
              </div>
            </>
          )}
        </DialogContent>
      </Dialog>
    </div>
  );
}
